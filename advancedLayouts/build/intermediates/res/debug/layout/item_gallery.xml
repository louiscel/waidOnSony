<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="148px"
    android:background="@color/gray"
    tools:ignore="PxUsage,UselessParent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_large" />

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_medium" />
        <LinearLayout
            android:layout_width="@dimen/smart_watch_2_control_width"
            android:layout_height="32px"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/celine/AndroidStudioProjects/AdvancedLayouts/advancedLayouts/src/main/res/layout/item_gallery.xml -->